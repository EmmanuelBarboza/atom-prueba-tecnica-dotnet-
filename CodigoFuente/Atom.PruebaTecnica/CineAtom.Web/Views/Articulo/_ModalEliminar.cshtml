<!-- Modal Eliminar -->
<div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Eliminar", "Articulo", FormMethod.Post))
            {
                <div class="modal-header">
                    <h5 class="modal-title" id="modalEliminarLabel">Eliminar Artículo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="ArticuloId" value="@(ViewBag.ArticuloEliminar?.ArticuloId ?? 0)" />
                    <p>¿Estás seguro que deseas eliminar este artículo?</p>

                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control" value="@(ViewBag.ArticuloEliminar?.Nombre ?? "")" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <input type="text" class="form-control" value="@(ViewBag.ArticuloEliminar?.Descripcion ?? "")" readonly />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Confirmar eliminación</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            }
        </div>
    </div>
</div>